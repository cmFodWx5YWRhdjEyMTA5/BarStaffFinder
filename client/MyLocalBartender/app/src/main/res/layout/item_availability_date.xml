<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="@dimen/cavs_avail_day_height"
    android:layout_height="match_parent"
    android:id="@+id/cv_availability_root"
    android:layout_marginLeft="2dp"
    app:cardCornerRadius="@dimen/cavs_5dp_spacing"
    android:clickable="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Day-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cavs_accent_material_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_availabil_cal_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/cavs_neutral" />
            </LinearLayout>

            <!--From-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/cavs_primary_text_dark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_availabil_cal_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cavs_dark_primary"
                    android:gravity="center_horizontal|center_vertical"
                    android:clickable="true"
                    android:textColor="@color/cavs_primary_text_dark"
                    android:textSize="@dimen/cavs_general_text_size" />
            </LinearLayout>

            <!--To-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/cavs_primary_text_dark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_availabil_cal_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cavs_dark_primary_light"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="@color/cavs_primary_text_dark"
                    android:textSize="@dimen/cavs_general_text_size" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_availability_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#00000000" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
