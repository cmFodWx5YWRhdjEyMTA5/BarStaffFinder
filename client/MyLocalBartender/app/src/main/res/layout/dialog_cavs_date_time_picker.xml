<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="299dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--TOP-->
                <LinearLayout
                    android:id="@+id/firstOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <!--TITLE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/cavs_accent_material_dark"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/cavs_datepicker_day"
                            android:textColor="@color/cavs_secondary_text_light" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/cavs_datepicker_month"
                            android:textColor="@color/cavs_secondary_text_light" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/cavs_datepicker_year"
                            android:textColor="@color/cavs_secondary_text_light" />


                    </LinearLayout>


                    <!--PICKER-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_day"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />

                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />

                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />


                    </LinearLayout>


                </LinearLayout>


                <!--TOP-->
                <LinearLayout
                    android:id="@+id/secondOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <!--TITLE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/cavs_accent_material_dark"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="HOURS"
                            android:textColor="@color/cavs_secondary_text_light" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="MINUTES"
                            android:textColor="@color/cavs_secondary_text_light" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="AM/PM"
                            android:textColor="@color/cavs_secondary_text_light" />


                    </LinearLayout>


                    <!--PICKER-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />

                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_minute"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />

                        <NumberPicker
                            android:id="@+id/np_dialog_cavs_datepicker_amPm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:descendantFocusability="blocksDescendants" />


                    </LinearLayout>


                </LinearLayout>


            </FrameLayout>


        </LinearLayout>
    </TabHost>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/cavs_accent_material_dark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/cavs_5dp_spacing"
            android:layout_marginTop="@dimen/cavs_5dp_spacing">

            <Button
                android:id="@+id/bt_dialog_cavs_datepicker_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cavs_accent_material_dark"
                android:text="@string/cavs_btn_ok"
                android:textColor="@color/cavs_secondary_text_light" />

            <View
                android:layout_width="@dimen/cavs_1dp_spacing"
                android:layout_height="match_parent"
                android:background="@color/cavs_dark_primary_light" />

            <Button
                android:id="@+id/bt_dialog_cavs_datepicker_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cavs_accent_material_dark"
                android:text="@string/cavs_btn_cancel"
                android:textColor="@color/cavs_secondary_text_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

